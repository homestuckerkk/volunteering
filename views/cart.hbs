<div class="cart">
    {{#each rows}}
    <div class="image-for-activity">
        <img src="/images/{{image}}">
    </div>
    <div class="text-for-activity">
        <h1>{{name}}</h1>
        <p>Куратор: {{curator}}</p>
        <p>Адрес: {{address}}</p>
        <p>Район: {{district}}</p>
        <p>Дата: {{date}}</p>
        <p>Время: {{time}}</p>
        <p>Тип: {{type}}</p>
        <form action="/signuptoact" method="post">
            <div class="button-for-activity">
                <input type="hidden" name="idd" value="{{activity_id}}">
                <button type="submit">Записаться</button>
            </div>
        </form>
    </div>
    {{/each}}
</div>